<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="loadingdata_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dialog_bg_color</item>
        <!--浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--打开后界面是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="editStyle">
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:textColor">@color/blink_black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!--<item name="android:layout_marginRight">50dp</item>-->
        <!--<item name="android:background">@color/blink_blue2</item>-->
    </style>

</resources>